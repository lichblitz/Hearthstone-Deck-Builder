<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="144dp"
    app:cardBackgroundColor="@color/window_background"
    app:cardElevation="0dp">



        <ImageView
            android:layout_marginTop="-10dp"
            android:paddingTop="-20dp"
            android:paddingLeft="-20dp"
            android:paddingRight="-20dp"
            android:layout_gravity="center|top"
            android:src="@drawable/card"
            android:id="@+id/card_image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"/>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center">

            <ImageView
                android:visibility="gone"
                android:id="@+id/count_frame"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/card_count_frame"/>

            <TextView
                android:layout_gravity="center"
                android:visibility="gone"
                style="@style/CardPreviewText"
                android:textColor="@color/shape_border"
                android:textSize="12dp"
                android:id="@+id/count_frame_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"/>
        </FrameLayout>



</android.support.v7.widget.CardView>